<div class="container">

  <div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

      <% if params[:action] == 'search' %>
          <h1 class="my-4">Search Results</h1>
          <p>Search results for "<%= params[:query] %>"</p>
      <% elsif params[:action] == 'author' %>
          <div class="mt-3 mb-3 row no-margin">
            <h2 class="author-articles-title">
              <%= image_tag(@user.avatar.url(:thumb), class: 'rounded-circle') %>
              Articles by @<%= params[:username] %>
            </h2>
          </div>
      <% else %>
          <h1 class="my-4">Explore Articles</h1>
      <% end %>

      <%= render @articles %>

      <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>

    </div>

    <!-- Sidebar Widgets Column -->
    <%= render 'layouts/articles_sidebar' %>

  </div>
  <!-- /.row -->

</div>
<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-lg-5 col-md-8 col-12">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Log in</h2>

          <div class="form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %>
              </div>

              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter password"  %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me, autocomplete: "off" %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
          <br><%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <section class="metrics mt-3">
    <div class="row no-margin mb-4">
      <div class="col-sm-4">
        <div class="card">
          <small class="card-header text-center">
            Total Articles
          </small>
          <h1 class="text-center"><%= @articles.count %></h1>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <small class="card-header text-center">
            Total Followers
          </small>
          <h1 class="text-center"><%= current_user.followers.count %></h1>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <small class="card-header text-center">
            Profile Views
          </small>
          <h1 class="text-center"><%= @articles.count %></h1>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="card mt-4">
          <div class="card-body">
            <%= line_chart @articles.group(:published_at).group_by_day(:published_at).count, legend: false, download: true %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="articles mt-4">
    <div class="row no-margin">
      <div class="col-sm-12">
        <h2>Top Articles</h2>
        <div class="table-responsive">
          <table class="table table-stripped table-hover">
            <thead>
            <tr>
              <th class="text-center" scope="col"></th>
              <th class="text-left" scope="col">Title</th>
              <th class="text-center" scope="col">Views</th>
              <th class="text-center" scope="col">Likes</th>
              <th class="text-center" scope="col">Bookmarks</th>
              <th class="text-center" scope="col">Published At</th>
            </tr>
            </thead>
            <tbody>
            <% @articles.order(views: :desc).limit(5).each_with_index do |article, index| %>
                <tr>
                  <td class="text-center"><%= index + 1 %></td>
                  <td class="text-left"><%= link_to article.name, article_path(article.permalink) %></td>
                  <td class="text-center"><%= article.views %></td>
                  <td class="text-center"><%= article.likes %></td>
                  <td class="text-center"><%= article.read_later %></td>
                  <td class="text-center"><%= article.published_at.present? ? article.published_at.strftime('%d %B, %Y') : 'â€“' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>
<div class="col-md-4">
  <div class="card my-4">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
      <%= form_tag(search_articles_path, :method => "get", id: "search-form") do %>
          <div class="input-group">
            <%= text_field_tag :query, params[:search], placeholder: "Search for...", class: 'form-control', required: true %>
            <span class="input-group-btn">
            <%= submit_tag "Go!", :name => nil, class: 'btn btn-secondary' %></span>
          </div>
      <% end %>
    </div>
  </div>
  <!-- Categories Widget -->
  <div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <% Tag.all.each do |t| %>
              <a href="#"><%= t.name %></a>&nbsp;&nbsp;&nbsp;
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% if current_user.present? %>
  <div class="card my-4">
    <h5 class="card-header">Following</h5>
    <div class="card-body no-padding">
      <ul class="list-group">
        <% current_user.followings.each do |f| %>
            <li class="list-group-item row no-margin <%= params[:username] && params[:username] == f.follow.username ? 'active' : nil %>">
              <%= link_to image_tag('http://placehold.it/30x30', class: 'rounded-circle')+'  @'+f.follow.username, author_articles_path(f.follow.username) %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>

<%# @article.update!(views: @article.views+1) %>
<div class="container">
  <div class="row">
    <%= render partial: 'author_sidebar' %>
    <div class="col-lg-8">
      <h3 class="mt-4 text-center text-sm-left">Something about me</h3>
      <hr>
      <div class="article-body">
        <%= form_for(@author, url: author_path(@author)) do |f| %>
            <div class="row">
              <div class="form-group col-sm-6">
                <%= f.label :avatar %>
                <%= f.file_field :avatar, placeholder: :avatar, class: 'custom-file' %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :time_zone %>
                <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {default: @author.time_zone} %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: :name, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :username %>
                <%= f.text_field :username, placeholder: :username, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :description %>
                <%= f.text_area :description, placeholder: :description, class: 'form-control', rows: 6 %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :facebook %>
                <%= f.text_field :facebook, placeholder: :facebook, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :twitter %>
                <%= f.text_field :twitter, placeholder: :twitter, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :instagram %>
                <%= f.text_field :instagram, placeholder: :instagram, class: 'form-control' %>
              </div>
              <div class="form-group col-sm-6">
                <%= f.label :pinterest %>
                <%= f.text_field :pinterest, placeholder: :pinterest, class: 'form-control' %>
              </div>
              <div class="col-12">
                <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
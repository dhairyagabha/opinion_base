<% if @comment.entity_type != 'Comment' %>
$('.comments').append("<%= escape_javascript render(@comment) %>");
$("form#new_comment")[0].reset();
<% else %>
$("#<%= @comment.entity.class.name.downcase%>-<%= @comment.entity.id %> div.card").remove();
$('#<%= @comment.entity.class.name.downcase%>-<%= @comment.entity.id %>').append("<%= escape_javascript render(@comment) %>");
<% end %>